<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="persistent.User" table="USER">
        <id column="user_id" name="user_id" type="java.lang.Integer" />
        <property column="username" name="username" type="java.lang.String" />
        <property column="password" name="password" type="java.lang.String" />
    </class>
</hibernate-mapping>